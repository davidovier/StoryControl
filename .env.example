TZ=Europe/Amsterdam
IG_USERNAME=your_username_here
IG_PASSWORD=your_password_here

# Supabase (for syncing captures to the web dashboard)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SECRET_KEY=your_secret_key_here

# Storage bucket for screenshots (optional, defaults to 'story-captures')
STORAGE_BUCKET=story-captures

# Web dashboard (Next.js)
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your_publishable_key_here

# Direct PostgreSQL connection (for CLI/scripts)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres

# Local development (set to true to run headless)
HEADLESS=false
